{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2015",
        "typeRoots": [
            "node_modules/@alttypes",
            "node_modules/@types"
        ],
        "paths": {
            "mongoose": ["node_modules/@alttypes/mongoose"],
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.d.ts",
        "node_modules",
    ]
}