{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2015",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.d.ts",
        "node_modules",
    ]
}