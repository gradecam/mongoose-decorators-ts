{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2015"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.d.ts",
        "node_modules",
        "typings",
        "typings-local"
    ]
}